<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.my.MainController" spacing="10" alignment="CENTER">
    <Label text="Список задач" />
    <TableView fx:id="taskTable" prefWidth="700" prefHeight="400">
        <columns>
            <TableColumn text="Название" fx:id="titleColumn" prefWidth="200"/>
            <TableColumn text="Описание" fx:id="descriptionColumn" prefWidth="500"/>
            <TableColumn text="Дата" fx:id="dueDateColumn" prefWidth="100"/>
        </columns>
    </TableView>
    <HBox alignment="CENTER" spacing="10">
        <Button text="Добавить задачу" fx:id="addTaskButton" />
        <Button text="Удалить задачу" fx:id="deleteTaskButton" />
    </HBox>
</VBox>